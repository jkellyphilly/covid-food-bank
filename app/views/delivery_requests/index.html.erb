<div class="jumbotron">
  <h1 class="display-4">Welcome to the community.</h1>
  <%= new_delivery_request_wording %>
</div>

<div class="container">
  <h2>Unconfirmed Deliveries: </h2>

  <div class="card-columns">
    <% @pending_delivery_requests.each do |dr| %>
        <div class="card" style="width: 22rem;">
          <div class="card-body">
            <%= print_delivery_title(dr) %>
            <h6 class="card-subtitle mb-2 text-muted">Member requesting: <%= link_to dr.community_member.name, community_member_path(dr.community_member) %></h6>
            <p class="card-text">Requested items: <%= dr.items %></p>
            <p class="card-text">Requested delivery date: <%= dr.requested_date %></p>
            <%= include_sign_up_option(dr) %>
          </div>
        </div>
    <% end %>
  </div>

  <h2>Confirmed Deliveries: </h2>
  <% @confirmed_delivery_requests.each do |dr| %>
    <%= print_delivery_title(dr) %>
    <ul>
      <li>Member requesting: <%= link_to dr.community_member.name, community_member_path(dr.community_member) %></li>
      <li>Requested items: <%= dr.items %></li>
      <li>Requested delivery date: <%= dr.requested_date %></li>
      <li>Volunteer: <%= link_to dr.volunteer_name, volunteer_path(dr.volunteer) %></li>
      <li>Route: <%= link_to "Route \##{dr.delivery_route.id}", volunteer_delivery_route_path(dr.volunteer, dr.delivery_route) %></li>
    </ul>
  <% end %>

  <h2>Completed Deliveries: </h2>
  <% @completed_delivery_requests.each do |dr| %>
    <%= print_delivery_title(dr) %>
    <ul>
      <li>Member requesting: <%= link_to dr.community_member.name, community_member_path(dr.community_member) %></li>
      <li>Requested items: <%= dr.items %></li>
      <li>Requested delivery date: <%= dr.requested_date %></li>
      <li>Volunteer: <%= link_to dr.volunteer_name, volunteer_path(dr.volunteer) %></li>
      <li>Route: <%= link_to "Route \##{dr.delivery_route.id}", volunteer_delivery_route_path(dr.volunteer, dr.delivery_route) %></li>
    </ul>
  <% end %>
</div>
