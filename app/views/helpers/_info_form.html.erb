<%= form_for user do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Jane Doe" %>
  </div>
  <% if user.class == CommunityMember %>
    <div class="form-group">
      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control", placeholder: "123 Main Street, Mainville, MA 10001" %><br>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class: "form-control", placeholder: "XXX-XXX-XXXX" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control", placeholder: "janedoe123@gmail.com" %>
  </div>
  <% if user.class == CommunityMember %>
    <div class="form-group">
      <%= f.label :allergies %>
      <%= f.text_field :allergies, class: "form-control", placeholder: "Be as specific as you can" %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control", placeholder: "jane-doe" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
  <br><br>
<% end %>
